<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- NOTE: to odrer headers -->
        <referenceBlock name="head.additional">
            <container name="head.additional.magictoolbox" after="-">
                <container name="head.additional.magicthumb"/>
                <container name="head.additional.magic360"/>
                <container name="head.additional.magiczoom"/>
                <container name="head.additional.magiczoomplus"/>
                <container name="head.additional.magicscroll"/>
                <container name="head.additional.magicslideshow"/>
            </container>
        </referenceBlock>
        <referenceContainer name="head.additional.magiczoomplus">
            <block class="MagicToolbox\MagicZoomPlus\Block\Html\Head" name="magiczoomplus-header" template="MagicToolbox_MagicZoomPlus::html/head.phtml" />
        </referenceContainer>
    </body>
</page>
