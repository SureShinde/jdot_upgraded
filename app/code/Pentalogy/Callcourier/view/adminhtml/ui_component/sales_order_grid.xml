<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction" class="Pentalogy\Callcourier\Ui\Component\MassAction\Listing">
            <action name="order_delete">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">order_delete</item>
                        <item name="label" xsi:type="string" translate="true">Book Mass Shipment (Call Courier)</item>
                        <item name="url" xsi:type="url" path="pentalogy_callcourier/shipment/massbooking"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Book Mass Shipment (Call Courier)</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure?</item>
                        </item>
                    </item>
                </argument>
            </action>
            <action name="order_delete_ship_invoice">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">order_delete_ship_invoice</item>
                        <item name="label" xsi:type="string" translate="true">Book Mass Shipment Invoice (Call Courier)</item>
                        <item name="url" xsi:type="url" path="pentalogy_callcourier/shipment/massbookingshipinvoice"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Book Mass Shipment Invoice (Call Courier)</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure?</item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>
