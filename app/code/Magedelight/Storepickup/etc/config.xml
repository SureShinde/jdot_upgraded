<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Magento/Core/etc/config.xsd">
    <default>
        <magedelight_storepickup>
            <storeinfo>
                <storepickupenable>0</storepickupenable>
                <linktitle>Store Locator</linktitle>
                <displaytopmenu>toplink</displaytopmenu>
                <allowguestcustomer>1</allowguestcustomer>
            </storeinfo>
            <storesearch>
                <defaultradious>10</defaultradious>
                <distanceunit>km</distanceunit>
            </storesearch>
            <listviewinfo>
                <meta_title>Storelocator</meta_title>
                <frontend_url>store-locator</frontend_url>
                <suffix>html</suffix>
            </listviewinfo>
        </magedelight_storepickup>
        <carriers>
            <storepickup>
                <active>1</active>
                <sallowspecific>0</sallowspecific>
                <model>Magedelight\Storepickup\Model\Carrier\Custom</model>
                <name>StorePickup</name>
                <price>5.00</price>
                <title>Best Way</title>
                <type>I</type>
                <specificerrmsg>This shipping method is not available. To use this shipping method, please contact us.</specificerrmsg>
                <handling_type>F</handling_type>
            </storepickup>
        </carriers>
    </default>
</config>