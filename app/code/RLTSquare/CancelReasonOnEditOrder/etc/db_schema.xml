<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" engine="innodb" comment="Sales Order">
        <column xsi:type="text" name="order_edit_reason" nullable="false" comment="Order Edit Reason"/>
        <column xsi:type="text" name="order_edit_description" nullable="true" comment="Order Edit Description"/>
    </table>
    <table name="sales_order_grid" resource="sales" engine="innodb" comment="Sales Order Grid">
        <column xsi:type="text" name="order_edit_reason" nullable="false" comment="Order Edit Reason"/>
        <column xsi:type="text" name="order_edit_description" nullable="true" comment="Order Edit Description"/>
    </table>
</schema>